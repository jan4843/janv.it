	{% unless image_url contains '://' %}
		{% capture image_url %}{{site.baseurl}}/media/{{image_url}}{% endcapture %}
	{% endunless %}
	{% if include.alt == blank %}
		{% assign alt = include.caption %}
	{% endif %}
	<a href="{{image_url}}">
    	<img src="{{image_url}}" alt="{{include.alt}}">
    </a>
    {% if image_url %}<figcaption>{{include.caption}}</figcaption>{% endif %}
