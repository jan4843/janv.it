---
layout: compress
permalink: blog/feed.xml
---

<?xml version="1.0" encoding="UTF-8"?>
<feed xmlns="http://www.w3.org/2005/Atom">
	<title>{{ site.title | xml_escape }}</title>
	<description>{{ site.description | xml_escape }}</description>
	<link rel="self" type="application/atom+xml" href="{{ site.url }}{{ site.baseurl }}/{{ page.permalink }}"/>
	<link rel="alternate" type="text/html" href="{{ site.url }}{{ site.baseurl }}/blog/"/>
	<updated>{{ site.time | date_to_xmlschema }}</updated>
	<id>{{ site.url }}</id>
	<author>
		<name>{{ site.author.name }}</name>
		<uri>{{ site.url }}{{ site.baseurl }}/</uri>
		<email>{{ site.author.email }}</email>
	</author>
	{% for post in site.posts limit: 10 %}
	<entry>
		<title>{{ post.title | xml_escape }}</title>
		{% if post.description %}<summary>{{ post.description | xml_escape }}</summary>{% endif %}
		<link rel="alternate" type="text/html" href="{{ site.url }}{{ site.baseurl }}{{ post.url }}"/>
		<id>{{ post.slug }}</id>
		<published>{{ post.date | date_to_xmlschema }}</published>
		<content type="html">{{ post.content | xml_escape }}</content>
	</entry>
	{% endfor %}
</feed>
